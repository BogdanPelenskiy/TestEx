datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  name      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Зв’язки
  trips          Trip[]          @relation("UserTrips") // користувач як власник
  places         Place[]         @relation("UserPlaces") // користувач як автор місць
  collaborations Collaboration[]
}

model Trip {
  id          String   @id @default(uuid())
  name        String
  startDate   DateTime
  endDate     DateTime
  createdById String

  createdBy User @relation("UserTrips", fields: [createdById], references: [id])

  // Зв’язки
  invites        Invite[]
  collaborations Collaboration[]
  places         Place[]
}

model Place {
  id           String   @id @default(uuid())
  tripId       String
  createdById  String
  locationName String
  notes        String?
  dayNumber    Int
  createdAt    DateTime @default(now())

  // Зв’язки
  trip      Trip @relation(fields: [tripId], references: [id])
  createdBy User @relation("UserPlaces", fields: [createdById], references: [id])

  @@index([tripId, dayNumber])
}

model Collaboration {
  id        String   @id @default(uuid())
  tripId    String
  userId    String
  role      String
  createdAt DateTime @default(now())

  trip Trip @relation(fields: [tripId], references: [id])
  user User @relation(fields: [userId], references: [id])

  @@unique([tripId, userId])
}

model Invite {
  id        String   @id @default(uuid())
  tripId    String
  email     String
  createdAt DateTime @default(now())

  trip Trip @relation(fields: [tripId], references: [id])
}
